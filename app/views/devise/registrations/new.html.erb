<h1>Sign up</h1>


<div class="container user_page">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "text_field" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, :class => "text_field" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", :class => "text_field" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => "text_field" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => "btn btn-lg btn-success" %>
    </div>
    <% end %>
    <br>
    <br>
    <%= render 'devise/shared/links' %>

</div>
